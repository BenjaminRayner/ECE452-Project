<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/categoryIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/transportation" />


    <ProgressBar
        android:id="@+id/categoryBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:indeterminate="false"
        android:max="100"
        android:progress="50"
        android:padding="7dp"
        android:progressBackgroundTint="@color/progressBackgroundColorUnderBudget"
        android:progressTint="@color/progressColorUnderBudget" />

    <TextView
        android:id="@+id/budgetText"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:text="1000 /1000"
        android:textAlignment="center"
        android:textSize="15sp" />

</LinearLayout>
