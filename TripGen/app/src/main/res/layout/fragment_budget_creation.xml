    <TextView
        android:id="@+id/transportationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transportation"
        app:layout_constraintBottom_toTopOf="@+id/transportationSlider"
        app:layout_constraintStart_toStartOf="@+id/transportationSlider" />

    <com.google.android.material.slider.Slider
        android:id="@+id/transportationSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:value="50"
        android:valueFrom="0"
        android:valueTo="100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView" />

    <TextView
        android:id="@+id/accommodationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accommodation"
        app:layout_constraintBottom_toTopOf="@+id/accommodationSlider"
        app:layout_constraintStart_toStartOf="@+id/accommodationSlider" />

    <com.google.android.material.slider.Slider
        android:id="@+id/accommodationSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:value="50"
        android:valueFrom="0"
        android:valueTo="100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/transportationSlider" />

    <TextView
        android:id="@+id/activityLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity"
        app:layout_constraintBottom_toTopOf="@+id/activitySlider"
        app:layout_constraintStart_toStartOf="@+id/activitySlider" />

    <com.google.android.material.slider.Slider
        android:id="@+id/activitySlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:value="50"
        android:valueFrom="0"
        android:valueTo="100"
        app:layout_constraintTop_toBottomOf="@+id/accommodationSlider"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/foodLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food"
        app:layout_constraintBottom_toTopOf="@+id/foodSlider"
        app:layout_constraintStart_toStartOf="@+id/foodSlider" />

    <com.google.android.material.slider.Slider
        android:id="@+id/foodSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:value="50"
        android:valueFrom="0"
        android:valueTo="100"
        app:layout_constraintTop_toBottomOf="@+id/activitySlider"
        tools:layout_editor_absoluteX="0dp" />

